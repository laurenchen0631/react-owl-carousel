{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es5", "es2015"],
    "sourceMap": true,
    "moduleResolution": "node",
    "module": "ES2015",
    "jsx": "react",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false
  },
  "include": [
    "./src"
  ]
}
